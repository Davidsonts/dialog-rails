<p id="notice"><%= notice %></p>

<h1>Usu√°rios</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Idade</th>
      <th>Sexo</th>
      <th>Cidade</th>
      <th>Uf</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.nome %></td>
        <td><%= user.idade.to_time.strftime('%d/%m/%Y') %></td>
        <td><%= user.sexo %></td>
        <td><%= user.cidade %></td>
        <td><%= user.uf %></td>
        <td><%= link_to fa_icon("eye"), user, class: 'text-warning' %></td>
        <td><%= link_to fa_icon("edit"), edit_user_path(user), class: 'text-info' %></td>
        <td><%= link_to fa_icon("trash-alt"), user, class: 'text-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @users, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>

