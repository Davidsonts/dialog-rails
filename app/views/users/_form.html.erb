<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :nome %>
    <%= form.text_field :nome %>
  </div>

  <div class="field">
    <%= form.label :idade %>
    <%= form.date_select :idade %>
  </div>

  <div class="field">
    <%= form.label :sexo %>
    <%= form.select(:sexo, options_for_select([:masculino, :feminino, :outro], selected: @user.sexo), prompt: "Selecione") %>
  </div>

  <div class="field">
    <%= form.label :uf %>
    <%= form.select(:uf, options_for_select(CS.states(:br).map{|key, value| key}, selected: @user.uf), prompt: "UF") %>
  </div>

  <div class="field">
    <%= form.label :cidade %>
    <%= form.text_field :cidade, class: "cidade-input", :disabled => true %> 
    <select name="user[cidade]" id="cidade">
    </select>
  </div>

  <%# < %= form.select(:uf, options_for_select(CS.cities(@user.uf, :br).map{|key, value| key}, selected: @user.cidade), prompt: "Please Select cidade") % > %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
